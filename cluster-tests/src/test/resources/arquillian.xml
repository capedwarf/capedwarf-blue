<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>
    <group qualifier="jboss-cluster" >

		  <!--
		  node A run parameters
		  ./standalone.sh -c standalone-full-ha.xml -Djboss.node.name=node-a -Dinfinispan.jgroups.node.type=jgroupsMaster -Djboss.server.data.dir=/opt/jboss/jboss-as-7.1.1.Final-SNAPSHOT-CD-A/standalone/data1
        -->
        <container qualifier="container-1" >
            <configuration>
                <property name="managementAddress">127.0.0.1</property>
                <property name="managementPort">9999</property>
            </configuration>
        </container>

        <!--
        node B run parameters
        .standalone.sh -c standalone-full-ha.xml -Djboss.node.name=node-b -Dinfinispan.jgroups.node.type=jgroupsSlave -Djboss.server.data.dir=/opt/jboss/jboss-as-7.1.1.Final-SNAPSHOT-CD-A/standalone/data2 -Djboss.socket.binding.port-offset=100
         -->
        <container qualifier="container-2">
            <configuration>
                <property name="managementAddress">127.0.0.1</property>
                <property name="managementPort">10099</property>
            </configuration>
        </container>
    </group>
</arquillian>
