<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         metadata-complete="false">

    <servlet>
        <servlet-name>matches</servlet-name>
        <servlet-class>org.jboss.test.capedwarf.prospectivesearch.MatchResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>matches</servlet-name>
        <url-pattern>/_ah/prospective_search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>special</servlet-name>
        <servlet-class>org.jboss.test.capedwarf.prospectivesearch.SpecialMatchResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>special</servlet-name>
        <url-pattern>/_ah/prospective_search_special</url-pattern>
    </servlet-mapping>

</web-app>
